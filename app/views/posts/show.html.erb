<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b><br/>
  <%= @post.name %>
</p>

<p>
  <b>Title:</b><br/>
  <%= @post.title %>
</p>

<p>
  <b>Content:</b><br/>
  <%= @post.content %>
</p>

<p>
  <b>Tags:</b><br/>
  <%= join_tags(@post) %>
</p>

<h2>Comments</h2>
<%= render :partial => "comments/comment",
           :collection => @post.comments %>

<h2>Add a comment:</h2>
<%= render "comments/form" %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
